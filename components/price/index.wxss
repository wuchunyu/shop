:host {
  display: inline-block;
  display: inline-block;
  font-weight: inherit;
}

.inline {
  display: inline;
  white-space: nowrap;
}

.price {
  display: inline;
  color: inherit;
  font-size: inherit;
  text-decoration: inherit;
}

.mini {
  font-size: 24rpx;
  color: #5d5d5d;
  font-weight: 400;
}

.del .pprice {
  font-size: 32rpx;
  color: #9b9b9b;
  text-decoration: line-through;
  font-weight: 400;
}

.symbol {
  display: inline;
  color: inherit;
  font-size: inherit;
  font-size: 0.8em;
}

.pprice {
  display: inline;
  margin: 0 0 0 4rpx;
}

.integer {
  color: inherit;
  font-size: inherit;
}

.decimal {
  color: inherit;
  font-size: inherit;
}

.decimal.smaller {
  font-size: 0.8em;
  vertical-align: baseline;
}